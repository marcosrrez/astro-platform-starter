---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SocialShare from '../../components/SocialShare.astro';
import NewsletterCTA from '../../components/NewsletterCTA.astro';

export async function getStaticPaths() {
    const blogEntries = await getCollection('blog');
    return blogEntries.map(entry => ({
        params: { slug: entry.slug },
        props: { entry }
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Structured data for SEO
const structuredData = {
    '@context': 'https://schema.org',
    '@type': 'Article',
    headline: entry.data.title,
    description: entry.data.description,
    image: entry.data.image ? new URL(entry.data.image, Astro.site).toString() : new URL('/og-default.svg', Astro.site).toString(),
    datePublished: entry.data.pubDate.toISOString(),
    dateModified: entry.data.pubDate.toISOString(),
    author: {
        '@type': 'Organization',
        name: entry.data.author || 'Florecer Mind Research Team',
        url: Astro.site
    },
    publisher: {
        '@type': 'Organization',
        name: 'Florecer Mind',
        logo: {
            '@type': 'ImageObject',
            url: new URL('/favicon.svg', Astro.site).toString()
        }
    },
    mainEntityOfPage: {
        '@type': 'WebPage',
        '@id': new URL(Astro.url.pathname, Astro.site).toString()
    },
    articleSection: entry.data.category,
    keywords: entry.data.tags.join(', ')
};
---

<Layout
    title={entry.data.title}
    description={entry.data.description}
    article={true}
    publishedTime={entry.data.pubDate.toISOString()}
    author={entry.data.author || "Florecer Mind Research Team"}
    image={entry.data.image || "/og-default.svg"}
    imageAlt={`${entry.data.title} - Florecer Mind`}
>
    <article class="max-w-4xl mx-auto">
        <!-- Article Header -->
        <header class="mb-12">
            <div class="mb-6 flex flex-wrap items-center gap-3 text-sm font-sans">
                <span class="category-badge bg-secondary/20 text-primary">
                    {entry.data.category}
                </span>
                <time datetime={entry.data.pubDate.toISOString()} class="text-neutral-600">
                    {entry.data.pubDate.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    })}
                </time>
            </div>

            <h1 class="mb-6 optical-align">
                {entry.data.title}
            </h1>

            <p class="text-xl text-neutral-700 leading-relaxed font-sans max-w-3xl">
                {entry.data.description}
            </p>

            <!-- Tags -->
            {entry.data.tags && entry.data.tags.length > 0 && (
                <div class="mt-8 flex flex-wrap gap-2">
                    {entry.data.tags.map((tag) => (
                        <a
                            href={`/blog?tag=${encodeURIComponent(tag)}`}
                            class="tag bg-neutral-100 text-neutral-700 hover:bg-primary hover:text-white"
                        >
                            #{tag}
                        </a>
                    ))}
                </div>
            )}

            <!-- Elegant divider -->
            <div class="section-divider"></div>
        </header>

        <!-- Social Sharing -->
        <SocialShare title={entry.data.title} url={new URL(Astro.url.pathname, Astro.site).toString()} />

        <!-- Article Content -->
        <div class="prose prose-lg max-w-none">
            <Content />
        </div>

        <!-- Newsletter CTA -->
        <NewsletterCTA />

        <!-- Sources & Resources Section -->
        {(entry.data.sources || entry.data.furtherReading || entry.data.relatedVideos) && (
            <section class="mt-20 pt-12 border-t border-neutral-200">
                <h2 class="mb-8 font-serif">Sources & Resources</h2>

                <!-- Scientific Sources -->
                {entry.data.sources && entry.data.sources.length > 0 && (
                    <div class="mb-10">
                        <h3 class="mb-6 font-serif text-neutral-900">Research Summary</h3>
                        <div class="space-y-4 font-sans">
                            {entry.data.sources.map((source) => (
                                <div class="pl-5 border-l-2 border-primary/30">
                                    <a
                                        href={source.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="font-medium block mb-1"
                                    >
                                        {source.title}
                                    </a>
                                    {source.type && (
                                        <span class="text-xs text-neutral-600 uppercase tracking-wider">
                                            {source.type}
                                        </span>
                                    )}
                                </div>
                            ))}
                        </div>
                    </div>
                )}

                <!-- Further Reading -->
                {entry.data.furtherReading && entry.data.furtherReading.length > 0 && (
                    <div class="mb-10">
                        <h3 class="mb-6 font-serif text-neutral-900">Further Reading</h3>
                        <div class="space-y-5 font-sans">
                            {entry.data.furtherReading.map((reading) => (
                                <div class="p-5 bg-neutral-50 rounded-lg border border-neutral-200 hover:border-primary transition-colors">
                                    <a
                                        href={reading.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="font-semibold text-lg block mb-2"
                                    >
                                        {reading.title}
                                    </a>
                                    {reading.description && (
                                        <p class="text-sm text-neutral-600 leading-relaxed">{reading.description}</p>
                                    )}
                                </div>
                            ))}
                        </div>
                    </div>
                )}

                <!-- Related Videos -->
                {entry.data.relatedVideos && entry.data.relatedVideos.length > 0 && (
                    <div class="mb-10">
                        <h3 class="mb-6 font-serif text-neutral-900">Related Videos</h3>
                        <div class="space-y-4 font-sans">
                            {entry.data.relatedVideos.map((video) => (
                                <div class="p-5 bg-neutral-50 rounded-lg border border-neutral-200 hover:border-primary transition-colors">
                                    <a
                                        href={video.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="font-medium block"
                                    >
                                        üé• {video.title}
                                    </a>
                                    {video.creator && (
                                        <span class="text-sm text-neutral-600 mt-1 block">
                                            by {video.creator}
                                        </span>
                                    )}
                                </div>
                            ))}
                        </div>
                    </div>
                )}

                <p class="text-sm text-neutral-600 italic mt-8 font-sans">
                    Note: Links provided are to accessible summaries and educational content.
                    Full academic citations available upon request.
                </p>
            </section>
        )}

        <!-- Article Footer -->
        <footer class="mt-16 pt-10 border-t border-neutral-200 font-sans">
            <div class="flex flex-wrap gap-6 justify-between items-center">
                <a href="/blog" class="font-medium inline-flex items-center group">
                    <span class="mr-2 group-hover:-translate-x-1 transition-transform">‚Üê</span>
                    Back to All Research
                </a>
                <a href="/newsletter" class="btn btn-primary">
                    Get More Research in Your Inbox
                </a>
            </div>
        </footer>
    </article>

    <!-- Reading Progress Bar -->
    <div class="reading-progress"></div>

    <!-- Back to Top Button -->
    <button
        id="back-to-top"
        class="back-to-top btn btn-primary btn-circle w-12 h-12 shadow-lg"
        aria-label="Back to top"
    >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
        </svg>
    </button>

    <!-- Structured Data for SEO -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <!-- Reading Progress & Back to Top Scripts -->
    <script>
        // Reading progress bar
        function updateProgress() {
            const winScroll = document.documentElement.scrollTop;
            const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (winScroll / height) * 100;
            const progressBar = document.querySelector('.reading-progress');
            if (progressBar) {
                progressBar.style.width = scrolled + '%';
            }
        }

        // Back to top button visibility
        function updateBackToTop() {
            const btn = document.getElementById('back-to-top');
            if (btn) {
                if (window.scrollY > 500) {
                    btn.classList.add('visible');
                } else {
                    btn.classList.remove('visible');
                }
            }
        }

        // Combined scroll handler
        function handleScroll() {
            updateProgress();
            updateBackToTop();
        }

        // Debounce for better performance
        let scrollTimeout;
        window.addEventListener('scroll', () => {
            if (scrollTimeout) {
                window.cancelAnimationFrame(scrollTimeout);
            }
            scrollTimeout = window.requestAnimationFrame(() => {
                handleScroll();
            });
        }, { passive: true });

        // Back to top click handler
        document.getElementById('back-to-top')?.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // Initialize on page load
        handleScroll();

        // Style checkmarks in article content
        function styleCheckmarks() {
            const prose = document.querySelector('.prose');
            if (!prose) return;

            // Find all text nodes containing checkmarks
            const walker = document.createTreeWalker(
                prose,
                NodeFilter.SHOW_TEXT,
                null
            );

            const nodesToReplace = [];
            let node;
            while (node = walker.nextNode()) {
                if (node.nodeValue && node.nodeValue.includes('‚úì')) {
                    nodesToReplace.push(node);
                }
            }

            // Replace checkmarks with styled spans
            nodesToReplace.forEach(node => {
                const parent = node.parentNode;
                if (!parent) return;

                const fragment = document.createDocumentFragment();
                const parts = node.nodeValue.split('‚úì');

                parts.forEach((part, index) => {
                    if (part) {
                        fragment.appendChild(document.createTextNode(part));
                    }
                    if (index < parts.length - 1) {
                        const checkmark = document.createElement('span');
                        checkmark.className = 'checkmark-styled';
                        checkmark.textContent = '‚úì';
                        fragment.appendChild(checkmark);
                    }
                });

                parent.replaceChild(fragment, node);
            });
        }

        // Run on page load
        styleCheckmarks();
    </script>
</Layout>
