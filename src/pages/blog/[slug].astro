---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
    const blogEntries = await getCollection('blog');
    return blogEntries.map(entry => ({
        params: { slug: entry.slug },
        props: { entry }
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description}>
    <article class="max-w-3xl mx-auto">
        <!-- Article Header -->
        <header class="mb-8">
            <div class="mb-4 flex flex-wrap items-center gap-3 text-sm">
                <span class="px-3 py-1 bg-secondary/20 text-primary rounded-full font-medium">
                    {entry.data.category}
                </span>
                <time datetime={entry.data.pubDate.toISOString()} class="text-neutral-600">
                    {entry.data.pubDate.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    })}
                </time>
            </div>

            <h1 class="mb-4 text-4xl font-bold text-primary sm:text-5xl leading-tight">
                {entry.data.title}
            </h1>

            <p class="text-xl text-neutral-700 leading-relaxed">
                {entry.data.description}
            </p>

            <!-- Tags -->
            {entry.data.tags && entry.data.tags.length > 0 && (
                <div class="mt-6 flex flex-wrap gap-2">
                    {entry.data.tags.map((tag) => (
                        <a
                            href={`/blog?tag=${encodeURIComponent(tag)}`}
                            class="px-3 py-1 text-sm bg-neutral-200 text-neutral-700 rounded-full hover:bg-primary hover:text-white transition-colors"
                        >
                            #{tag}
                        </a>
                    ))}
                </div>
            )}
        </header>

        <!-- Article Content -->
        <div class="prose prose-lg max-w-none prose-headings:text-primary prose-a:text-primary prose-strong:text-neutral-900">
            <Content />
        </div>

        <!-- Sources & Resources Section -->
        {(entry.data.sources || entry.data.furtherReading || entry.data.relatedVideos) && (
            <section class="mt-16 pt-8 border-t-2 border-neutral-300">
                <h2 class="mb-6 text-2xl font-bold text-primary">Sources & Resources</h2>

                <!-- Scientific Sources -->
                {entry.data.sources && entry.data.sources.length > 0 && (
                    <div class="mb-8">
                        <h3 class="mb-4 text-xl font-bold text-neutral-900">Research Citations</h3>
                        <ul class="space-y-3">
                            {entry.data.sources.map((source) => (
                                <li class="pl-4 border-l-2 border-primary">
                                    <a
                                        href={source.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="text-primary hover:underline font-medium"
                                    >
                                        {source.title}
                                    </a>
                                    {source.type && (
                                        <span class="ml-2 text-xs text-neutral-600 uppercase">
                                            [{source.type}]
                                        </span>
                                    )}
                                </li>
                            ))}
                        </ul>
                    </div>
                )}

                <!-- Further Reading -->
                {entry.data.furtherReading && entry.data.furtherReading.length > 0 && (
                    <div class="mb-8">
                        <h3 class="mb-4 text-xl font-bold text-neutral-900">Further Reading</h3>
                        <ul class="space-y-4">
                            {entry.data.furtherReading.map((reading) => (
                                <li class="p-4 bg-neutral-50 rounded-lg border border-neutral-200">
                                    <a
                                        href={reading.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="text-primary hover:underline font-medium text-lg"
                                    >
                                        {reading.title}
                                    </a>
                                    {reading.description && (
                                        <p class="mt-2 text-sm text-neutral-700">{reading.description}</p>
                                    )}
                                </li>
                            ))}
                        </ul>
                    </div>
                )}

                <!-- Related Videos -->
                {entry.data.relatedVideos && entry.data.relatedVideos.length > 0 && (
                    <div>
                        <h3 class="mb-4 text-xl font-bold text-neutral-900">Related Videos</h3>
                        <ul class="space-y-3">
                            {entry.data.relatedVideos.map((video) => (
                                <li class="p-4 bg-neutral-50 rounded-lg border border-neutral-200">
                                    <a
                                        href={video.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="text-primary hover:underline font-medium"
                                    >
                                        üé• {video.title}
                                    </a>
                                    {video.creator && (
                                        <span class="ml-2 text-sm text-neutral-600">
                                            by {video.creator}
                                        </span>
                                    )}
                                </li>
                            ))}
                        </ul>
                    </div>
                )}
            </section>
        )}

        <!-- Article Footer -->
        <footer class="mt-12 pt-8 border-t border-neutral-300">
            <div class="flex flex-wrap gap-4 justify-between items-center">
                <a href="/blog" class="text-primary font-medium hover:underline">
                    ‚Üê Back to All Research
                </a>
                <a href="/newsletter" class="btn btn-primary">
                    Get More Research in Your Inbox
                </a>
            </div>
        </footer>
    </article>
</Layout>
