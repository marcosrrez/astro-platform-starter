---
// Social sharing buttons component
interface Props {
    title: string;
    url: string;
}

const { title, url } = Astro.props;
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);
---

<div class="flex items-center gap-3 py-6 border-t border-b border-neutral-200 my-8">
    <span class="text-sm font-semibold text-neutral-700 mr-2">Share:</span>

    <!-- Twitter -->
    <a
        href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`}
        target="_blank"
        rel="noopener noreferrer"
        class="social-share-btn text-neutral-600 hover:text-[#1DA1F2] transition-all no-underline inline-flex items-center justify-center p-2 rounded-lg hover:bg-neutral-100"
        aria-label="Share on Twitter"
        title="Share on Twitter"
    >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
    </a>

    <!-- LinkedIn -->
    <a
        href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`}
        target="_blank"
        rel="noopener noreferrer"
        class="social-share-btn text-neutral-600 hover:text-[#0A66C2] transition-all no-underline inline-flex items-center justify-center p-2 rounded-lg hover:bg-neutral-100"
        aria-label="Share on LinkedIn"
        title="Share on LinkedIn"
    >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
    </a>

    <!-- Facebook -->
    <a
        href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`}
        target="_blank"
        rel="noopener noreferrer"
        class="social-share-btn text-neutral-600 hover:text-[#1877F2] transition-all no-underline inline-flex items-center justify-center p-2 rounded-lg hover:bg-neutral-100"
        aria-label="Share on Facebook"
        title="Share on Facebook"
    >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
    </a>

    <!-- Copy Link -->
    <button
        onclick="navigator.clipboard.writeText(window.location.href); this.querySelector('.copy-feedback').classList.add('show');"
        class="social-share-btn text-neutral-600 hover:text-primary transition-all relative inline-flex items-center justify-center p-2 rounded-lg hover:bg-neutral-100 no-transform"
        aria-label="Copy link"
        title="Copy link"
    >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
        </svg>
        <span class="copy-feedback absolute -top-10 left-1/2 -translate-x-1/2 bg-neutral-900 text-white text-xs px-3 py-1.5 rounded shadow-lg opacity-0 transition-opacity whitespace-nowrap pointer-events-none">
            Copied!
        </span>
    </button>
</div>

<style>
    .copy-feedback.show {
        opacity: 1;
        animation: fadeOut 2s forwards;
    }

    @keyframes fadeOut {
        0%, 50% { opacity: 1; }
        100% { opacity: 0; }
    }
</style>

<script>
    // Reset copy feedback after animation
    document.querySelectorAll('button[aria-label="Copy link"]').forEach(btn => {
        btn.addEventListener('click', () => {
            setTimeout(() => {
                btn.querySelector('.copy-feedback')?.classList.remove('show');
            }, 2000);
        });
    });
</script>
